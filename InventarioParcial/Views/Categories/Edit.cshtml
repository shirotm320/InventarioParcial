@model InventarioParcial.Dtos.CategoryDto
@{
    ViewData["Title"] = "Editar Categoría";
}

<div class="container mt-4">
    <div class="card col-md-6 mx-auto shadow border-warning">
        <div class="card-header bg-warning"><h4>Editar Categoría</h4></div>
        <div class="card-body">

            <form asp-action="Edit" id="editCategoryForm">

                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Nombre</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Descripción</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                </div>

                <button type="submit" class="btn btn-warning w-100">Guardar Cambios</button>
                <a asp-action="Index" class="btn btn-secondary w-100 mt-2">Cancelar</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/just-validate@latest/dist/just-validate.production.min.js"></script>

    <script>
        const validator = new JustValidate('#editCategoryForm', {
            errorFieldCssClass: 'is-invalid',
            errorLabelCssClass: 'text-danger mt-1 small',
        });

        validator
            .addField('#Name', [
                {
                    rule: 'required',
                    errorMessage: '¡El nombre no puede quedar vacío!',
                },
                {
                    rule: 'minLength',
                    value: 3,
                    errorMessage: 'Mínimo 3 letras.',
                },
            ])
            .onSuccess((event) => {
                event.target.submit();
            });
    </script>
}