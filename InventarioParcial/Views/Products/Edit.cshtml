@model InventarioParcial.Dtos.ProductCreateDto

@{
    ViewData["Title"] = "Editar Producto";
    var productId = ViewBag.ProductId; // Recuperamos el ID que mandamos desde el controller
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-warning">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">✏️ Editar Producto</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@productId" method="post" id="editForm">

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Nombre</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryId" class="form-label">Categoría</label>
                            <select asp-for="CategoryId" class="form-select"
                                    asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label">Precio</label>
                                <input asp-for="Price" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Stock" class="form-label">Stock</label>
                                <input asp-for="Stock" class="form-control" type="number" />
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-3">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">Cancelar</a>
                            <button type="submit" class="btn btn-warning">Guardar Cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/just-validate@latest/dist/just-validate.production.min.js"></script>

    <script>
        // 2. Iniciamos la validación buscando el formulario por su ID 'editForm'
        const validator = new JustValidate('#editForm', {
            errorFieldCssClass: 'is-invalid',
            errorLabelCssClass: 'text-danger mt-1 small',
        });

        // 3. Definimos las mismas reglas que en Crear
        validator
            .addField('#Name', [
                {
                    rule: 'required',
                    errorMessage: '¡El nombre es obligatorio!',
                },
                {
                    rule: 'minLength',
                    value: 3,
                    errorMessage: 'El nombre debe tener al menos 3 letras.',
                },
            ])
            .addField('#CategoryId', [
                {
                    rule: 'required',
                    errorMessage: 'Por favor, selecciona una categoría.',
                },
            ])
            .addField('#Price', [
                {
                    rule: 'required',
                    errorMessage: 'El precio es requerido.',
                },
                {
                    rule: 'minNumber',
                    value: 0.01,
                    errorMessage: 'El precio debe ser mayor a 0.',
                },
            ])
            .addField('#Stock', [
                {
                    rule: 'required',
                    errorMessage: 'El stock es requerido.',
                },
                {
                    rule: 'integer',
                    errorMessage: 'El stock debe ser un número entero.',
                },
                {
                    rule: 'minNumber',
                    value: 0,
                    errorMessage: 'El stock no puede ser negativo.',
                },
            ])
            .onSuccess((event) => {
                event.target.submit();
            });
    </script>
}